<section class="page-header">
    <h1>{{pageTitle}}</h1>
    <p class="subtitle">¿Quieres trabajar juntos? ¡Hablemos!</p>
</section>

<section class="contact-section">
    <div class="contact-grid">
        <div class="contact-info">
            <h2>Información de Contacto</h2>
            <div class="contact-item">
                <i class="fas fa-envelope"></i>
                <div>
                    <h3>Email</h3>
                    <p>{{email}}</p>
                </div>
            </div>
            <div class="contact-item">
                <i class="fas fa-phone"></i>
                <div>
                    <h3>Teléfono</h3>
                    <p>{{phone}}</p>
                </div>
            </div>
            <div class="contact-item">
                <i class="fas fa-map-marker-alt"></i>
                <div>
                    <h3>Ubicación</h3>
                    <p>Guayaquil, Ecuador</p>
                </div>
            </div>
            
            <div class="social-section">
                <h3>Redes Sociales</h3>
                <div class="social-links-large">
                    {{#each socialMedia}}
                    <a href="{{this.url}}" target="_blank" class="social-link">
                        <i class="fab fa-{{this.icon}}"></i>
                        <span>{{this.platform}}</span>
                    </a>
                    {{/each}}
                </div>
            </div>
        </div>
        
        <div class="contact-form-container">
            <h2>Envíame un Mensaje</h2>
            <form class="contact-form" id="contactForm">
                <div class="form-group">
                    <label for="name">Nombre</label>
                    <input type="text" id="name" name="name" required placeholder="Tu nombre">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required placeholder="tu@email.com">
                </div>
                <div class="form-group">
                    <label for="subject">Asunto</label>
                    <input type="text" id="subject" name="subject" required placeholder="Asunto del mensaje">
                </div>
                <div class="form-group">
                    <label for="message">Mensaje</label>
                    <textarea id="message" name="message" rows="5" required placeholder="Escribe tu mensaje aquí..."></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-full">
                    <i class="fas fa-paper-plane"></i> Enviar Mensaje
                </button>
            </form>
        </div>
    </div>
</section>
